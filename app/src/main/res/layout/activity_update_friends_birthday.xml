<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UpdateFriendsBirthday">

    <EditText
        android:id="@+id/update_friends_birthday_name_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff" />

    <EditText
        android:id="@+id/update_friends_birthday_birthday_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff" />

    <Button
        android:id="@+id/update_friends_birthday_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="update" />

    <Button
        android:id="@+id/get_friends_birthday_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="update" />

</LinearLayout>